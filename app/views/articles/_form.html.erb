<div class="container pt-4 text-white form-box">
  <%= form_with(model:@article, local: true) do |f| %>
        <div class="row mb-4">
          <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-xl-2"><%= f.label :title, class: "form-label" %></div>
          <div class="col-xs-12 col-sm-10 12 col-md-10 col-lg-10 col-xl-10"><%= f.text_field :title, placeholder: "Title text", class: "form-control" %></div>
        </div>
        <div class="row mb-4">
          <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-xl-2"><%= f.label :description, class: "form-label" %></div>
          <div class="col-xs-12 col-sm-10 12 col-md-10 col-lg-10 col-xl-10"><%= f.text_area :description, placeholder: "Description text", class: "form-control", size: "40x10" %></div>
        </div>
        <p class="text-center">
          <%= f.submit class:"btn-article" %> 
        </p>
  <% end %>
</div>