<div class="container pt-4 text-white form-box">
  <%= form_with(model:@identification, local: true) do |f| %>
      <%= f.hidden_field :user_id, value: @user_id %>
        <div class="row mb-4">
          <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-xl-2"><%= f.label :register_number,"Register number" ,class: "form-label" %></div>
          <div class="col-xs-12 col-sm-10 12 col-md-10 col-lg-10 col-xl-10"><%= f.text_field :register_number, placeholder: "Enter Register number", class: "form-control" %></div>
        </div>
        <div class="row mb-4">
          <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-xl-2"><%= f.label :active, class: "form-label" %></div>
          <div class="col-xs-12 col-sm-10 12 col-md-10 col-lg-10 col-xl-10"><%= f.radio_button :active, true ,class: "form-control" %></div>
        </div>
        <p class="text-center">
          <%= f.submit class:"btn-article" %> 
        </p>
  <% end %>
</div>