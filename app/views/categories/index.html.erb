<div class="container text-center">
  <h1 id="categorys-index-title">Categories listing page</h1>
</div>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container text-center">
  <% @categories.each do |category| %>
    <div class="container card-box">
      <div class="container card-item">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success text-decoration-none" %></h5>
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
            <%= link_to 'View', category_path(category), class: "btn btn-outline-success" %>
            <% if logged_in? && current_user.admin? %>
              <%= link_to 'Edit', edit_category_path(category), class: "btn btn-outline-primary" %>
              <%= link_to 'Delete', category_path(category),class: "btn btn-outline-danger", data: {"turbo-method": :delete, "turbo-confirm":"are you sure ?"} %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <span>Created <%= time_ago_in_words(category.created_at) %> ago</span>
            <span>Edited <%= time_ago_in_words(category.updated_at) %> ago</span> 
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>

