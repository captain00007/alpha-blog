<div class="container text-center">
  <h1 id="categorys-index-title">Categories listing page</h1>
</div>
<div class="container text-center">
  <% @category.each do |category| %>
    <div class="container card-box">
      <div class="container card-item">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success text-decoration-none" %></h5>
          </div>
          <div class="card-footer text-muted">
            <span>Created <%= time_ago_in_words(category.created_at) %> ago</span>
            <span>Edited <%= time_ago_in_words(category.updated_at) %> ago</span> 
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>