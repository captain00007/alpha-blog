<div class="contaner text-center">
  <h1 class="text-center"><%= @user.username %>'s profile </h1>
  <%= gravatar_for @user, size: 200 %>
  <%= link_to 'Edit your profile', edit_user_path(@user), class: "btn btn-outline-primary mt-3" %>
  <div class="container text-center mt-4">
    <h1>Articles</h1>
  </div>
  <%= render 'articles/articles', obj: @user.articles%>
  <p class="text-center">
    <%= link_to 'Create article', new_article_path, class:"btn btn-primary" %>
  </p>
</div>